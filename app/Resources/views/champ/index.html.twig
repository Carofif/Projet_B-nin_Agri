{% extends 'base.html.twig' %}

{% block content %}


    <div class="row">
        <div class="col-lg-12">
            <a href="{{ path('champ_new') }}" class="btn btn-success">Nouveau </a>
        </div>

    </div>
    <br>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"> Liste des champs</h4>
        <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Superficie</th>
                <th>Addresse</th>
                <th>Culture</th>
                <th>Ville</th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for champ in champs %}
            <tr>
                <td><a href="{{ path('champ_show', { 'id': champ.id }) }}">{{ champ.id }}</a></td>
                <td>{{ champ.superficie }}</td>
                <td>{{ champ.addresse }}</td>
                <td>{{ champ.culture }}</td>
                <td>{{ champ.ville }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('champ_show', { 'id': champ.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('champ_edit', { 'id': champ.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
