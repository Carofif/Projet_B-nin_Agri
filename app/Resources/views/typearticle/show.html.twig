{% extends 'base.html.twig' %}

{% block content %}
    <h1>Typearticle</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ typeArticle.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ typeArticle.code }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ typeArticle.libelle }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('typearticle_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('typearticle_edit', { 'id': typeArticle.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
