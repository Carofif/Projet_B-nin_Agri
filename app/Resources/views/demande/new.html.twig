{% extends 'base.html.twig' %}

{% block content %}


    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-light" href="{{ path('champ_index') }}"><span class=" mdi mdi-arrow-left">Retour a la liste</span>
            </a>
        </div>
    </div><br>
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Création d'une nouvelle demande</h4>

                    {{ form_start(form) }}

                    <div class="row">
                        <div class="col-md-6">
                            <label for="">Date de Debut</label>
                            {{ form_widget(form.dateDebut , {'attr' : {'class' : 'form-control demoDate'}}) }}
                            <span class="text-danger">{{ form_widget(form.dateDebut) }}</span>
                        </div>
                        <div class="col-md-6">
                            <label for="">Date de Fin</label>
                            {{ form_widget(form.dateFin , {'attr' : {'class' : 'form-control demoDate'}}) }}
                            <span class="text-danger">{{ form_errors(form.dateFin) }}</span>
                        </div>
                    </div>
                    <br>

                    <div class="row">
                        <div class="col-md-6">
                            <label for="">Quantité</label>
                            {{ form_widget(form.quantiteCmd , {'attr' : {'class' : 'form-control'}}) }}
                            <span class="text-danger">{{ form_widget(form.quantiteCmd) }}</span>
                        </div>
                        <div class="col-md-6">
                            <label for="">Prix voulu</label>
                            {{ form_widget(form.prixUTvoulue , {'attr' : {'class' : 'form-control'}}) }}
                            <span class="text-danger">{{ form_errors(form.prixUTvoulue) }}</span>
                        </div>
                    </div>
                    <br>

                    <div class="row">
                        <div class="col-lg-12">
                            <div align="right">
                                <input class="btn btn-success" type="submit" value="Create"/>
                            </div>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
