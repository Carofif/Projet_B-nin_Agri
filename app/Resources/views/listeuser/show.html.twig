{% extends 'base.html.twig' %}

{% block content %}



    <ul>
        <li>
            <a href="{{ path('listeuser_index') }}">Retour à la liste</a>
        </li>
    </ul>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title"></h4>
            <h1>L'utilisateur</h1>
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <table>
                        <tbody>
                        <tr>
                            <th>Nom</th>
                            <td>{{ listeUser.nom }}</td>
                        </tr>
                        <tr>
                            <th>Prenom</th>
                            <td>{{ listeUser.prenom }}</td>
                        </tr>
                        <tr>
                            <th>Telephone</th>
                            <td>{{ listeUser.telephone }}</td>
                        </tr>
                        </tbody>
                     </table>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
